@using Microsoft.AspNetCore.Components

@code {
    [Parameter]
    public int CurrentPage { get; set; }
    [Parameter]
    public int TotalPages { get; set; }
    [Parameter]
    public EventCallback<int> OnPageChanged { get; set; }

    private async Task SetPage(int page)
    {
        if (page < 1 || page > TotalPages)
        {
            return;
        }

        await OnPageChanged.InvokeAsync(page);
    }

    private bool ShowPrevious => CurrentPage > 1;
    private bool ShowNext => CurrentPage < TotalPages;
}

<div class="pagination">

    @if (ShowPrevious)
    {
        <a @onclick="() => SetPage(1)">First</a>
        <a @onclick="() => SetPage(CurrentPage - 1)">Previous</a>
    }

    <span>Page @CurrentPage of @TotalPages</span>

    @if (ShowNext)
    {
        <a @onclick="() => SetPage(CurrentPage + 1)">Next</a>
        <a @onclick="() => SetPage(TotalPages)">Last</a>
    }

</div>
